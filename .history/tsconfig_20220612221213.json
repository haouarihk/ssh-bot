{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}